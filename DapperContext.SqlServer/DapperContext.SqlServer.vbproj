<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>BertoSoftware</RootNamespace>
		<TargetFrameworks>net48;net8.0;net9.0</TargetFrameworks>
		<OptionStrict>On</OptionStrict>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>DapperContext.SqlServer</Title>
		<Description>A simple collections of functions and method for CRUD operation in Dapper for generic item</Description>
		<Copyright>Roberto Faccani</Copyright>
		<Version>0.4.3-beta</Version>
		<FileVersion>0.4.3</FileVersion>
		<AssemblyVersion>0.4.3</AssemblyVersion>
		<PackageProjectUrl>https://www.nuget.org/packages/BertoSoftware.DapperContext.SqlServer</PackageProjectUrl>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageTags>dapper;orm;dbcontext;sql server</PackageTags>
		<RepositoryUrl>https://github.com/berto82/DapperContext</RepositoryUrl>
		<IncludeSymbols>True</IncludeSymbols>
		<Authors>Roberto Faccani</Authors>
		<Company>Roberto Faccani</Company>
		<PackageId>$(RootNamespace).$(AssemblyName)</PackageId>
		<AssemblyName>$(RootNamespace).$(MSBuildProjectName)</AssemblyName>
		<RepositoryType>git</RepositoryType>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>Icon-Dapper-Context.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageReleaseNotes>v0.5.0-beta

Various fix and improvements</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Icon-Dapper-Context.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Data.SqlClient" Version="6.0.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\DapperContext\DapperContext.vbproj" />
	</ItemGroup>

</Project>
